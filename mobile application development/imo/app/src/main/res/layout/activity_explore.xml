<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".explore">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:cardCornerRadius="250dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            >

            <Button
                android:id="@+id/profile"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="centerCrop"
                android:layout_gravity="center"
                android:background="@drawable/account1"
                />


        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/message"
            android:orientation="vertical"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/message1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/message1" />
        </LinearLayout>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/chatroom"
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/chat" />

            <View
                android:layout_width="wrap_content"
                android:layout_height="2dp"
                android:layout_marginTop="5dp"
                android:background="#0088FF"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/manage"
            android:orientation="vertical"
            android:layout_width="120dp"

            android:layout_height="wrap_content"
            >

            <Button
                android:id="@+id/manage1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginLeft="45dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/manage1" />

        </LinearLayout>

    </LinearLayout>
    <View
        android:layout_width="wrap_content"
        android:layout_height="0.5dp"
        android:background="#F8D8D6D6"
        />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:layout_marginTop="0.5dp"

        >


        <LinearLayout
            android:id="@+id/room1"
            android:orientation="vertical"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/room"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:hint="Room"
                android:textSize="15dp"
                android:textColor="@color/black"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/explore1"
            android:orientation="vertical"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            >

            <TextView
                android:id="@+id/explore"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="   Explore"
                android:textSize="15dp"
                android:textColor="@color/black"
                />

            <View
                android:layout_width="20dp"
                android:layout_height="3dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:background="@color/black"
                />
        </LinearLayout>

        <Button
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/graph" />
        <Button

            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/notification" />
        <Button
            android:id="@+id/arrow"
            android:layout_width="22dp"
            android:layout_height="22dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="8dp"
            android:background="@drawable/man" />
    </LinearLayout>


                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="480dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/roomevent"
                    />

            </LinearLayout>