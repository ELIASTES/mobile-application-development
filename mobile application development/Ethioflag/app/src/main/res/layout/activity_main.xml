<!--        />-->

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/landoforigion"
        />

    <Button
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginRight="20dp"
        android:layout_gravity="right"
        android:background="@drawable/sound"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

    <Button
        android:id="@+id/amhara"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="20dp"
        android:text="Amhara"
        android:background="@color/light_blue_600"
        android:textSize="20dp" />

            <Button
                android:id="@+id/tigray"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_margin="20dp"
                android:layout_gravity="center"
                android:background="@color/light_blue_A200"
                android:text="Tigray"
                android:textSize="20dp" />
    <Button
        android:id="@+id/sidama"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="right"
        android:layout_margin="20dp"
        android:text="Sidama"
        android:background="@color/light_blue_A200"
        android:textSize="20dp" />
    <Button
        android:id="@+id/oromiya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="center"
        android:text="Oromiya"
        android:background="@color/light_blue_A200"
        android:textSize="20dp" />
    <Button
        android:id="@+id/harari"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_gravity="left"
        android:layout_marginLeft="10dp"
        android:text="Harari"
        android:background="@color/light_blue_A200"
        android:textSize="20dp" />
    <Button
        android:id="@+id/benshangul"
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Benshangul"
        android:background="@color/light_blue_A200"
        android:textSize="20dp" />

            <Button
        android:id="@+id/gambela"
                android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Gambela"
        android:background="@color/light_blue_A200"
        android:textSize="20dp" />

    <Button
        android:id="@+id/southnation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="left"
        android:layout_margin="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="20dp"
        android:background="@color/light_blue_A200"
        android:text="South nation"
        android:textSize="20dp" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_margin="30dp"
        android:background="@drawable/unity"
        />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Unity in Diversity is our strength!!!"
                android:layout_marginBottom="100dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#01FF83"
                android:textSize="30dp"
                />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/afar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="10dp"
        android:background="@color/light_blue_A200"
        android:text="Afar"
        android:textSize="20dp" />

</LinearLayout>